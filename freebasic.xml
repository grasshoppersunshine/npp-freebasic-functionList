<NotepadPlus>
	<functionList>
		<!-- ============================================================================ [ FreeBASIC ] -->
		<!-- FreeBASIC - Free/Open Source (GPL), BASIC compiler for Microsoft Windows, DOS and Linux    -->

		<parser
			id         ="freebasic_syntax"
			displayName="FreeBASIC - Free/Open Source (GPL), BASIC compiler for Microsoft Windows, DOS and Linux"
			commentExpr="(rem\s+.*?)$"
		>
			
			<function
				mainExpr="(^|:)[\t\x20]*((sub|function|constructor|destructor|property)[\t\x20]+[a-zA-Z0-9_\.]+|operator[\t\x20]+[a-zA-Z0-9_\.=+\-\*/\!@#$^&amp;\(\)\[\]\\&lt;>]+)"
			>
				<functionName>
					<nameExpr expr="[a-zA-Z0-9_\.=+\-\*/\!@#$^&amp;\(\)\[\]\\&lt;>]+$" />
				</functionName>
				<className>
					<nameExpr expr="\w+\." />
					<nameExpr expr="\w+" />
				</className>
			</function>
			
			<classRange
				mainExpr    ="(^|:)[\t\x20]*type[\t\x20]+\w+(.+?)\s+end[\t\x20]+type[\t\x20]*(?=\n|\Z)"
			>
				<className>
					<nameExpr expr="\w+$" />
				</className>
				<function
					mainExpr="(^|:)[\t\x20]*declare[\t\x20]+((sub|function|constructor|destructor|property)[\t\x20]+[a-zA-Z0-9_\.]+|operator[\t\x20]+[a-zA-Z0-9_\.=+\-\*/\!@#$^&amp;\(\)\[\]\\&lt;>]+)[\t\x20]*\(.*?\)([\t\x20]+\w+)*[\t\x20]*\n"
				>
					<functionName>
						<funcNameExpr expr="[a-zA-Z0-9_\.=+\-\*/\!@#$^&amp;\(\)\[\]\\&lt;>]+[\t\x20]*\(.*?\)([\t\x20]+\w+)*[\t\x20]*\n" />
					</functionName>
				</function>
			</classRange>
			
		</parser>
	</functionList>
</NotepadPlus>